<% include partials/header %>
<body>
  <div class="back-img">
    <h1 class="text-center">Welcome To Library Management System</h1>
    <% include partials/alerts %>
    <div class="row mt-3 mr-0">
      <div class="col-md-5 mx-auto text-center p-4 abs-center">
        <!-- <div class="mt-3"> -->
        <!-- <a href="/auth/admin-login" class="btn btn-block btn-lg btn-info">Admin Login</a> -->
        <!-- </div> -->

        <div class="mt-3">
          <a href="/auth/user-login" class="btn btn-block btn-lg btn-info"
            >User Login</a
          >
        </div>

        <div class="mt-3">
          <a href="/auth/user-signup" class="btn btn-block btn-lg btn-info"
            >User Sign Up</a
          >
        </div>

        <div class="mt-3">
          <a href="/books/all/all/1" class="btn btn-block btn-lg btn-info"
            >Browse Books</a
          >
        </div>
      </div>
    </div>
  </div>

  <div class="my-3 container">
    <h1>Newly Added books</h1>
    <% if (books.length <= 0) { %>
    <h1>There is no books to display</h1>
    <% } else { %>

    <div class="row mr-0">
      <% for(var i = 0; i < books.length; i++) { %>
      <div class="card col-md-3 col-lg-3 text-center mx-2 my-3">
        <div class="card-body">
          <h5 class="card-title"><%=books[i].title%></h5>
          <img src="/images/<%=books[i].image || "defaultbook.png"%>"%>"
          class="card-img-top">
          <p class="text-muted">
            <small class="text-muted">Author : <%=books[i].author%></small>
          </p>
          <p class="text-muted">
            <small class="text-muted">Category : <%=books[i].category%></small>
          </p>
          <p class="text-muted">
            <small class="text-muted">In stock : <%=books[i].stock%></small>
          </p>

          <a
            href="/books/details/<%=books[i]._id%>"
            class="btn btn-xs btn-primary"
            >Details</a
          >
        </div>
      </div>
      <% } %> <% } %>
    </div>
  </div>

  <div class="container" style="margin-top: 32px">
    <h1>Mostly Borrowed books</h1>
    <% if (booksBorrow.length <= 0) { %>
    <h1>There is no books to display</h1>
    <% } else { %>

    <div class="row mr-0">
      <% for(var i = 0; i < booksBorrow.length; i++) { %>
      <div class="card col-md-3 text-center mx-3 my-3">
        <div class="card-body">
          <h5 class="card-title"><%=booksBorrow[i].title%></h5>
          <img src="/images/<%=booksBorrow[i].image || "defaultbook.png"%>"
          class="card-img-top">
          <p class="text-muted">
            <small class="text-muted"
              >Author : <%=booksBorrow[i].author%></small
            >
          </p>
          <p class="text-muted">
            <small class="text-muted"
              >Category : <%=booksBorrow[i].category%></small
            >
          </p>
          <p class="text-muted">
            <small class="text-muted"
              >In stock : <%=booksBorrow[i].stock%></small
            >
          </p>

          <a
            href="/books/details/<%=booksBorrow[i]._id%>"
            class="btn btn-xs btn-primary"
            >Details</a
          >
        </div>
      </div>
      <% } %> <% } %>
    </div>
  </div>

  <% include partials/footer %>
</body>
